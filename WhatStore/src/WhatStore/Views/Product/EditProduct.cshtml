@model WhatStore.Domain.Infrastructure.ViewModels.Admin.RegisterProductViewModel
@{
    Layout = "_Admin";
}
<title>Administrar Produto - WhatStore</title>

<div class="admin-settings-content">

    <h3>Editar Produtos</h3>

    <form asp-controller="product" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label>Código do produto</label>
            <input type="text" name="id" class="form-control" asp-for="Id" value="@Model.Id" required readonly="readonly" />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label>Nome do produto: </label>
            <input type="text" class="form-control" required asp-for="ProductName" value="@Model.ProductName" />
            <span asp-validation-for="ProductName"></span>

            <div class="form-group">
                <label>Descrição: </label>
                <textarea class="form-control" rows="5" style="resize: none" required asp-for="Description" value="@Model.Description"></textarea>
            </div>
            <div class="form-group">
                <label>Preço: </label>
                <input type="text" class="form-control" placeholder="Ex.: 20,00" required asp-for="Price" value="@Model.Price" pattern="([0-9]{1,3}\.)?[0-9]{1,3},[0-9]{2}$" />
            </div>
            <hr />

        </div>

        <div class="form-group">
            <label>Foto: </label>

            @if (Model.ImageName != null && Model.ImageName.Count > 0)
            {
                @foreach (var picture in Model.ImageName)
                {
                    <div class="logo-display-content">
                        <button asp-action="delete/picture" type="submit" name="editPicture" class="btn custom-bottom-delete float-right">x</button>
                        <img src="@picture" class="logo-display-image" />
                    </div>

                }
            }

            <input class="custom-file-input" type="file" id="fotoProduto" asp-for="Picture" multiple value="@Model.Picture" />

        </div>
        <hr />

        <div class="form-group">
            <h3>Este produto possui variações?</h3>
            <label>Ex: Diferentes cores, tamanhos, etc...</label>
            <div class="onoffswitch margin-right-10">
                <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="checkVariacoes" asp-for="HasVariety" value="@Model.HasVariety">
                <label class="onoffswitch-label" for="checkVariacoes">
                    <span class="onoffswitch-inner"></span>
                    <span class="onoffswitch-switch"></span>
                </label>
            </div>
            <div id="variacoes" class="form-group" style="display: none;">
                <div class="form-group">
                    <label>Cor:</label>
                    <input list=cor class="form-control" placeholder="Ex.: azul, preto" asp-for="Colors" value="@Model.Colors">
                </div>
                <div class="form-group">
                    <label>Tamanho:</label>
                    <input list=tamanho class="form-control" placeholder="Ex.: P, M, 10, 12" asp-for="Sizes" value="@Model.Sizes">
                </div>
            </div>
        </div>
        <hr />


        <div class="form-group">
            <h3>Este produto possui frete?</h3>
            <div class="onoffswitch margin-right-10">
                <input type="checkbox" checked="@((Model.IsFreeShip) ? true : false)" name="onoffswitch" class="onoffswitch-checkbox" id="checkFrete" asp-for="IsFreeShip">
                <label class="onoffswitch-label" for="checkFrete">
                    <span class="onoffswitch-inner"></span>
                    <span class="onoffswitch-switch"></span>
                </label>
            </div>
            <div id="frete" style="display: @((Model.IsFreeShip) ? "block" : "none");">
                <div class="float-left margin-right-40">
                    <label>Peso:</label>
                    <input type="text" value="@Model.Weigth" class="form-control" style="width:170px" placeholder="Ex.: 1,05kg" asp-for="Weigth" />
                </div>
                <div class="float-left margin-right-40">
                    <label>Altura: </label>
                    <input type="text" value="@Model.Widith" class="form-control" style="width:170px" placeholder="Ex.: 10cm" asp-for="Widith" />
                </div>
                <div class="float-right">
                    <label>Comprimento: </label>
                    <input type="text" value="@Model.Length" class="form-control" style="width:170px" placeholder="Ex.: 20cm" asp-for="Length" />
                </div>
            </div>
        </div>

        <hr />

        <div class="form-group">
            <h3>Tags</h3>
            <input type="text" class="form-control" placeholder="Ex.: Presentes" required asp-for="Tags" value="@Model.Tags" />
        </div>



        <button asp-action="edit" type="submit" name="salvar" style="height: 40px" class="btn btn-primary margin-bottom-20 float-right">Salvar</button>

        <button asp-action="delete" type="submit" name="excluir" style="height: 40px" class="btn btn-primary margin-right-20 float-right">Excluir</button>
        <hr />
    </form>
</div>

@section Scripts{
    <script type="text/javascript">
        $("#checkVariacoes").on("change", function () {
            if ($(this).is(":checked")) {
                $("#variacoes").css("display", "block");
            } else {
                $("#variacoes").css("display", "none");

            }
        });

        $("#checkFrete").on("change", function () {
            if ($(this).is(":checked")) {
                $("#frete").css("display", "block");
            } else {
                $("#frete").css("display", "none");

            }
        });
    </script>
}
