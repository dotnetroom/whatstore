@model WhatStore.Domain.Infrastructure.ViewModels.Admin.RegisterProductViewModel
@{
    Layout = "_Admin";
}
<title>Cadastro de Produtos - WhatStore</title>

<div class="admin-settings-content">

    <h3>Cadastro de Produtos</h3>

    <form asp-action="edit" asp-controller="product" method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label>Código do produto</label>
            <input type="text" name="id" class="form-control" asp-for="Id" value="@Model.Id" required />
            <span asp-validation-for="Id" class="text-danger"></span>
        </div>


        <div class="form-group">
            <label>Nome do produto: </label>
            <input type="text" class="form-control" required asp-for="ProductName" value="@Model.ProductName" />
            <span asp-validation-for="ProductName"></span>
            <div class="form-group">
                <label>Código do produto</label>
                <input type="text" name="id" class="form-control" asp-for="Id" value="@Model.Id" required readonly="readonly" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label>Nome do produto: </label>
                <input type="text" class="form-control" required asp-for="ProductName" value="@Model.ProductName" />
                <span asp-validation-for="ProductName"></span>
            </div>
            <div class="form-group">
                <label>Descrição: </label>
                <textarea class="form-control" rows="5" style="resize: none" required asp-for="Description" value="@Model.Description"></textarea>
            </div>
            <div class="form-group">
                <label>Preço: </label>
                <input type="text" class="form-control" placeholder="Ex.: 20,00" required asp-for="Price" value="@Model.Price" pattern="([0-9]{1,3}\.)?[0-9]{1,3},[0-9]{2}$" />
            </div>
            <hr />

            <div class="form-group">
                <label>Foto: </label>
                <input class="inputfile" type="file" id="fotoProduto" style="display: none" asp-for="Picture" multiple value="@Model.Picture" />
                <label for="fotoProduto" class="btn btn-secondary" style="width:170px !important">Selecionar imagem</label>

            </div>
            <hr />
            <div class="form-group">
                <h3>Este produto possui variações?</h3>
                <label>Ex: Diferentes cores, tamanhos, etc...</label>
                <div class="onoffswitch margin-right-10">
                    <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="checkVariacoes" asp-for="HasVariety" value="@Model.HasVariety">
                    <label class="onoffswitch-label" for="checkVariacoes">
                        <span class="onoffswitch-inner"></span>
                        <span class="onoffswitch-switch"></span>
                    </label>

                </div>
                <div class="form-group">
                    <label>Descrição: </label>
                    <textarea class="form-control" rows="5" style="resize: none" required asp-for="Description" value="@Model.Description"></textarea>
                </div>
                <div class="form-group">
                    <label>Preço: </label>
                    <input type="text" class="form-control" placeholder="Ex.: 20,00" required asp-for="Price" value="@Model.Price" pattern="([0-9]{1,3}\.)?[0-9]{1,3},[0-9]{2}$" />
                </div>
                <hr />

                <div class="form-group">
                    <label>Foto: </label>
                    <input class="inputfile" type="file" id="fotoProduto" style="display: none" asp-for="Picture" multiple value="@Model.Picture" />
                    <label for="fotoProduto" class="btn btn-secondary" style="width:170px !important">Selecionar imagem</label>

                </div>
                <hr />
                <div class="form-group">
                    <h3>Este produto possui variações?</h3>
                    <label>Ex: Diferentes cores, tamanhos, etc...</label>
                    <div class="onoffswitch margin-right-10">
                        <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="checkVariacoes" asp-for="HasVariety" value="@Model.HasVariety">
                        <label class="onoffswitch-label" for="checkVariacoes">
                            <span class="onoffswitch-inner"></span>
                            <span class="onoffswitch-switch"></span>
                        </label>
                    </div>
                    <div id="variacoes" class="form-group" style="display: none;">
                        <div class="form-group">
                            <label>Cor:</label>
                            <input list=cor class="form-control" placeholder="Ex.: azul, preto" asp-for="Colors" value="@Model.Colors">
                        </div>
                        <div class="form-group">
                            <label>Tamanho:</label>
                            <input list=tamanho class="form-control" placeholder="Ex.: P, M, 10, 12" asp-for="Sizes" value="@Model.Sizes">
                        </div>
                    </div>
                </div>
                <hr />

                <div class="form-group">
                    <h3>Este produto possui frete?</h3>
                    <div class="onoffswitch margin-right-10">
                        <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="checkFrete" asp-for="IsFreeShip" checked="@((Model.IsFreeShip) ? true : false)">
                        <label class="onoffswitch-label" for="checkFrete">
                            <span class="onoffswitch-inner"></span>
                            <span class="onoffswitch-switch"></span>
                        </label>
                    </div>
                    <div id="frete" style="display: none;">
                        <div class="float-left margin-right-40">
                            <label>Peso:</label>
                            <input type="text" value="0" class="form-control" style="width:170px" placeholder="Ex.: 1,05kg" asp-for="Weigth" />
                        </div>
                        <div class="float-left margin-right-40">
                            <label>Altura: </label>
                            <input type="text" value="0" class="form-control" style="width:170px" placeholder="Ex.: 10cm" asp-for="Widith" />
                        </div>
                        <div class="float-right">
                            <label>Comprimento: </label>
                            <input type="text" value="0" class="form-control" style="width:170px" placeholder="Ex.: 20cm" asp-for="Length" />
                        </div>
                    </div>
                </div>

                <hr />

                <div class="form-group">
                    <h3>Tags</h3>
                    <input type="text" class="form-control" placeholder="Ex.: Presentes" required asp-for="Tags" value="@Model.Tags" />
                </div>

            </div>

            <button type="submit" style="height: 40px" class="btn btn-primary margin-bottom-20 float-right">Salvar</button>
    </form>
</div>

@section Scripts{
    <script type="text/javascript">
        $("#checkVariacoes").on("change", function () {
            if ($(this).is(":checked")) {
                $("#variacoes").css("display", "block");
            } else {
                $("#variacoes").css("display", "none");

            }
        });

        $("#checkFrete").on("change", function () {
            if ($(this).is(":checked")) {
                $("#frete").css("display", "block");
            } else {
                $("#frete").css("display", "none");

            }
        });
    </script>
}
