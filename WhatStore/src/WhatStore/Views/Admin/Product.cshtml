@{
    Layout = "_Admin";
}
<title>Cadastro de Produtos - WhatStore</title>

<div class="admin-settings-content">

    <h3>Cadastro de Produtos</h3>

    <form class="form-group">

        <div class="form-group">
            <label>Nome do produto: </label>
            <input type="text" class="form-control" />
        </div>
        <div class="form-group">
            <label>Descrição: </label>
            <textarea class="form-control" rows="5" style="resize: none"></textarea>
        </div>
        <div class="form-group">
            <label>Preço: </label>
            <input type="text" class="form-control" value="R$" />
        </div>
        <hr />

        <div class="form-group">
            <label>Foto: </label>
            <input type="image" />
        </div>
        <hr />
        <div class="form-group">
            <h3>Este produto possui variações</h3>
            <label>Ex: Diferentes cores, tamanhos, etc...</label>
            <div class="onoffswitch margin-right-10">
                <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="checkVariacoes">
                <label class="onoffswitch-label" for="checkVariacoes">
                    <span class="onoffswitch-inner"></span>
                    <span class="onoffswitch-switch"></span>
                </label>
            </div>
            <div id="variacoes" style="display: none;">
                <input list=variacao class="form-control">
                <select id=variacao class="form-control">
                    <option> Cor</option>
                    <option> Tamanho</option>
                </select>
            </div>
        </div>

        <div class="form-group">
            <button type="submit" style="height: 40px" class="btn btn-primary margin-bottom-20 float-right">Registrar</button>
        </div>
    </form>
</div>

@section Scripts{
<script type="text/javascript">
    $("#checkVariacoes").on("change", function () {
        if ($(this).is(":checked")) {
            $("#variacoes").css("display", "block");
        } else {
            $("#variacoes").css("display", "none");

        }
    });
</script>
}
