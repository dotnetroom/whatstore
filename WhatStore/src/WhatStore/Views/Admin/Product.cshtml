@{
    Layout = "_Admin";
}
<title>Cadastro de Produtos - WhatStore</title>

<div class="admin-settings-content">

    <h3>Cadastro de Produtos</h3>

    <form class="form-group">

        <div class="form-group">
            <label>Nome do produto: </label>
            <input type="text" class="form-control" required/>
        </div>
        <div class="form-group">
            <label>Descrição: </label>
            <textarea class="form-control" rows="5" style="resize: none" required></textarea>
        </div>
        <div class="form-group">
            <label>Preço: </label>
            <input type="text" class="form-control" placeholder="Ex.: 20,00" required/>
        </div>
        <hr />

        <div class="form-group">
            <label>Foto: </label>
            <input class="inputfile" type="file" id="fotoProduto" style="display: none"/>
            <label for="fotoProduto" class="btn btn-secondary" style="width:170px !important">Selecionar imagem</label>

        </div>
        <hr />
        <div class="form-group">
            <h3>Este produto possui variações?</h3>
            <label>Ex: Diferentes cores, tamanhos, etc...</label>
            <div class="onoffswitch margin-right-10">
                <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="checkVariacoes">
                <label class="onoffswitch-label" for="checkVariacoes">
                    <span class="onoffswitch-inner"></span>
                    <span class="onoffswitch-switch"></span>
                </label>
            </div>
            <div id="variacoes" class="form-group" style="display: none;">
                <div class="form-group">
                    <label>Cor:</label>
                    <input list=cor class="form-control" placeholder="Ex.: azul, preto">
                </div>
                <div class="form-group">
                    <label>Tamanho:</label>
                    <input list=tamanho class="form-control" placeholder="Ex.: P, M, 10, 12">
                </div>
            </div>
        </div>
        <hr />

        <div class="form-group">
            <h3>Este produto possui frete?</h3>
            <div class="onoffswitch margin-right-10">
                <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="checkFrete">
                <label class="onoffswitch-label" for="checkFrete">
                    <span class="onoffswitch-inner"></span>
                    <span class="onoffswitch-switch"></span>
                </label>
            </div>
            <div id="frete" style="display: none;">
                <div class="float-left margin-right-40">
                    <label>Peso:</label><input type="text" class="form-control" style="width:170px" placeholder="Ex.: 1,05kg"/>
                </div>
                <div class="float-left margin-right-40">
                    <label>Altura: </label><input type="text" class="form-control" style="width:170px" placeholder="Ex.: 10cm"/>
                </div>
                <div class="float-right">
                    <label>Comprimento: </label><input type="text" class="form-control" style="width:170px" placeholder="Ex.: 20cm"/>
                </div>
            </div>
        </div>
        <hr />

        <div class="form-group">
            <h3>Tags</h3>
            <input type="text" class="form-control" placeholder="Ex.: Presentes" required/>
        </div>

        <div class="form-group">
            <button type="submit" style="height: 40px" class="btn btn-primary margin-bottom-20 float-right">Cadastrar</button>
        </div>
    </form>
</div>

@section Scripts{
    <script type="text/javascript">
        $("#checkVariacoes").on("change", function () {
            if ($(this).is(":checked")) {
                $("#variacoes").css("display", "block");
            } else {
                $("#variacoes").css("display", "none");

            }
        });

        $("#checkFrete").on("change", function () {
            if ($(this).is(":checked")) {
                $("#frete").css("display", "block");
            } else {
                $("#frete").css("display", "none");

            }
        });
    </script>
}
