@{
    Layout = "_Admin";
}

<form class="form-group float-center margin-top-10">

    <div class="row margin-top-10">
        <label>Sobre o responsavel: </label>
        <textarea class="form-control"> </textarea>
    </div>

    <div class="row margin-top-10">
        <label>Nome: </label>
        <input class="form-control"/>
    </div>

    <div class="row margin-top-10">
        <label> Sobrenome: </label>
        <input class="form-control"/>
    </div>

    <div class="row margin-top-10">
        <label>CPF: </label>
        <input class="form-control"/>
    </div>

    <div class="row margin-top-10">
        <label>RG: </label>
        <input class="form-control"/>
    </div>

    <div class="row margin-top-10">
        <label>Data Nascimento: </label>
        <input class="form-control"/>
    </div>
    
    <div class="row margin-top-10">
        <label>Genero: </label>
        <input class="form-control"/>
    </div>

    <div class="row margin-top-10">
        <label>Telefone: </label>
        <input class="form-control"/>
    </div>

    <div class="row margin-top-10 font-size13">
        <h4>Pessoa Juridica?</h4>
        <div class="onoffswitch margin-right-10">
            <input type="checkbox" name="onoffswitch" class="onoffswitch-checkbox" id="myonoffswitch">
            <label class="onoffswitch-label" for="myonoffswitch">
                <span class="onoffswitch-inner"></span>
                <span class="onoffswitch-switch"></span>
            </label>
        </div>
    </div>
    
    <div class="row margin-top-10">
        <h4>Endereço: </h4>
        <label>CEP: </label>
        <input class="form-control" />
    </div>

    <div class="row margin-top-10">
        <label>Logradouro: </label>
        <input class="form-control"/>
    </div>
    
    <div class="row margin-top-10">
        <label>Endereço: </label>
        <input class="form-control"/>
    </div>

    <div class="row margin-top-10">
        <label>Numero: </label>
        <input class="form-control"/>
    </div>

    <div class="row margin-top-10">
        <label>Bairro: </label>
        <input class="form-control"/>
    </div>

    <div class="row margin-top-10">
        <label>Complemento: </label>
        <input class="form-control"/>
    </div>

    <div class="row margin-top-10">
        <label>Cidade: </label>
        <input class="form-control"/>
    </div>

    <div class="row margin-top-10">
        <label>Estado</label>
        <input class="form-control"/>
    </div>

    <div class="row margin-top-10">
        <button class="btn btn-primary margin-top-10" style="width: 100%; height: 40px;" type="submit">Enviar</button>
    </div>

</form>

