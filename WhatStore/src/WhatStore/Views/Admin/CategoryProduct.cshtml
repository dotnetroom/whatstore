@model WhatStore.Domain.Infrastructure.ViewModels.Admin.RegisterProductCategoryViewModel
    Layout = "_Layout";
    }

<body>
    <form class="form-group margin-top-75" asp-controller="" asp-action="" method="post">
        <div class="form-group float-left">
            <label>Categoria dos produtos</label>
            <input class="form-control" name="CategoryProduct" id="Category" value="@Model.Categorys" />
            <button class="btn-primary btn" type="submit">Salvar</button>
        </div>
    </form>
    <table class="table" id="CategoryTable">
        <tr>
            <th class="tableRow">Categoria</th>
            <th class="tableRow">Opções</th>
        </tr>
        
        @foreach (var category in Model.Categorys)
            {

            <tr>
                <td class="tableRow">@category.CategoryName/td>
                <td class="tableRow">
                    <form class="form-group" asp-controller="" asp-action="" method="post">
                        <input name="categoryID" hidden value="@category.Id" />
                        <button type="submit" class="btn btn-primary"></button>
                    </form>
                </td>
            </tr>

        }
    </table>
</body>
