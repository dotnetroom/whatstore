@model WhatStore.Infrastructure.ViewModels.Admin.RegisterStoreDataViewModel

@{
    Layout = "_Admin";
}

<title>Dados da loja - WhatStore</title>

<div class="admin-settings-content">
    <h3>Dados da Loja</h3>
    <form asp-controller="Store" asp-action="register/information" method="post" enctype="multipart/form-data" class="float-center margin-top-20">
        <div class="form-group">
            <label>Nome da loja:</label>
            <input type="text" class="form-control" name="StoreName" value="@Model.StoreName" required/>
        </div>
        <div class="form-group">
            <label>Descrição da loja:</label>
            <textarea name="StoreDescription" class="form-control" rows="10" style="resize: none" required>@Model.StoreDescription</textarea>
        </div>
        <div class="form-group">
            <div class="float-left" style="width:10%">
                <label>DDD:</label>
                <input name="PhoneDDD" type="text" class="form-control" value="@Model.PhoneDDD"/>
            </div>
            <div class="float-left margin-left-10">
                <label>Telefone:</label>
                <input name="PhoneNumber" type="text" class="form-control" value="@Model.PhoneNumber"/>
            </div>
            <div class="float-right margin-left-30">
                <label>Email:</label>
                <input name="Email" type="text" class="form-control" style="width:800px" value="@Model.Email" required/>
            </div>
        </div>
        <div class="form-group">
            <label>URL:</label>
            <div class="form-inline">
                <input name="URL" type="text" class="form-control float-left" value="@Model.URL" required/>
                <span class="input-group-addon float-left">.whatstore.com.br</span>
            </div>
        </div>
        <div class="form-group">
            <label>Escolha o logo da sua loja</label>
            <input type="file" name="Pictures" id="Pictures" class="inputfile" style="display: none;" multiple/>
            <label class="btn btn-secondary" style="width:30% !important" for="Pictures">Selecione o arquivo</label>
        </div>
        <div class="form-group">
            <label>Termos de uso:</label>
            <textarea name="Terms" class="form-control" rows="10" style="resize: none;" value="@Model.Terms" required></textarea>
        </div>

        <hr />

        <div class="form-group">
            <h3 class="float-left">Endereço físico</h3>
            <div class="onoffswitch margin-right-10 float-right margin-top-20">
                <input asp-for="HasAdress" type="checkbox" class="onoffswitch-checkbox" id="checkEndereco" >
                <label class="onoffswitch-label" for="checkEndereco">
                    <span class="onoffswitch-inner"></span>
                    <span class="onoffswitch-switch"></span>
                </label>
            </div>
        </div>



        <div id="adress" style="display: none;">
            <div class="form-group"><label>Endereço:</label>
                    <input name="Address" type="text" class="form-control" value="@Model.Address" />               
            </div>
            <div class="form-group">
                <div class="float-left" style="width:20%">
                    <label>Número:</label>
                    <input name="Number" type="text" class="form-control" value="@Model.Number" />
                </div> 
                <div class="float-right margin-left-50" style="width:40%">
                    <label>CEP:</label>
                    <input name="CEP" type="text" class="form-control" value="@Model.CEP"/>
                </div>
            </div>
            <div class="form-group">
                <label>Complemento:</label>
                <input name="Complemento" type="text" class="form-control" value="@Model.Complemento"/>
            </div> 
            <div class="form-group">
                <div class="float-right  margin-left-20" style="width:40%">
                    <label>Cidade:</label>
                    <select name="City" id="dropCities" type="text" class="form-control" disabled="disabled" value="@Model.City">
                        <option value="-1">Selecione sua cidade</option>
                    </select>
                </div>
                <div class="float-left" style="width:40%">
                    <label>Estado:</label>
                    <select name="State" id="dropStates" type="text" class="form-control" value="@Model.State">
                        <option value="-1">Selecione um estado</option>
                        @foreach (var state in Model.States)
                        {
                            <option value="@state.Id">@state.Initials</option>
                        }
                    </select>
                </div>
            </div>
        </div>

        <div class="form-group">
            <button class="btn btn-primary margin-top-10 float-right" style="height: 40px;" type="submit">Salvar</button>
        </div>

    </form>
</div>

@section Scripts{
    <script type="text/javascript">
        $("#checkEndereco").on("change", function () {
            console.log('changing');
            if ($(this).is(":checked")) {
                $("#adress").css("display", "block");
            } else {
                $("#adress").css("display", "none");
            }
        });

        $(document).ready(function () {
            $('#dropStates').states($('#dropCities'));
        });
    </script>
}
