@model WhatStore.Domain.Infrastructure.ViewModels.Store.RegisterStoreTypeViewModel
    Layout = "_Layout";
}

<body>

    <form class="form-group margin-top-75" asp-controller="store" asp-action="register/type" method="post">

        <div class="form-group float-left">

            <label>Tipo de loja: </label>
            <input value="@Model.StoreType" class="form-control float-left" name="StoreType" id="Type" />
            <button class="btn btn-primary margin-top-10  float-left" type="submit">Enviar</button>

        </div>

    </form>

    <form class="form-group" asp-controller="store" asp-action ="delte/type" method="delete">

        <table class="table" id="TypeTable">
            <tr>
                <th class="tableRow">tipo de loja</th>
                <th class="tableRow">Opções</th>
            </tr>

            @foreach (var type in Model.StoreTypes)
            {

                <tr>
                    <td value="@type.Id" class="tableRow">@type.Name</td>
                    <td class="tableRow"><button type="submit" class="btn btn-primary">Deletar</button></td>
                </tr>

            }

        </table>

    </form>

</body>
