@model WhatStore.Domain.Infrastructure.ViewModels.Account.RegisterUserStoreCompViewModel
@{
    Layout = null;
}
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>Register</title>
</head>

<body>
    <form class="formRegisterUserStore float-center margin-top-20 margin-bottom-50" asp-controller="account" asp-action="~/{store}/register/user/complement" method="post">

        <div class="float-left margin-top-10 font-size13">
            <div class="float-left margin-right-10 font-size13">
                <label>Nome: </label>
                <input type="text" class="form-control" style="width:180px" asp-for="Name" required />
            </div>

            <div class="float-right font-size13">
                <label>Sobrenome: </label>
                <input type="text" class="form-control" style="width:210px" required asp-for="LastName" />
            </div>
        </div>

        <div class="float-left margin-top-10 font-size13">
            <div class="float-left margin-right-10 font-size13">
                <label>RG: </label>
                <input type="text" class="form-control" style="width:190px" required asp-for="RG" />
            </div>

            <div class="float-right font-size13">
                <label>CPF: </label>
                <input type="text" class="form-control" style="width:200px" required asp-for="CPF" />
            </div>
        </div>

        <div class="float-left margin-top-10 font-size13">
            <div class="float-left margin-right-10 font-size13">
                <label>Data de nascimento:</label>
                <input type="date" class="form-control" required asp-for="Birthday" />
            </div>

            <div class="float-right font-size13">
                <label>Genero: </label>
                <select id="Genero" class="form-control" style="width:220px" asp-for="Genero" >
                    <option value="-1">Selecione um genero</option>
                    <option value="false">Masculino</option>
                    <option value="true">Feminino</option>
                </select>
            </div>
        </div>

        <div class="float-left margin-top-10 font-size13">
            <div class="float-left margin-right-10 font-size13">
                <label>DDD: </label>
                <input type="text" class="form-control" style="width:110px" maxlength="2" required name="PhoneDDD" />
            </div>
            <div class="float-right font-size13">
                <label>Telefone: </label>
                <input type="text" class="form-control" style="width:280px" required name="PhoneNumber" />
            </div>
        </div>

        <div class="float-left margin-top-10 font-size13">
            <div class="float-left margin-right-10 font-size13">
                <label>Estado:</label>
                <select id="dropStates" class="form-control" style="width:190px" asp-for="State">
                    <option value="-1">Selecione um estado</option>
                    @foreach (var state in Model.States)
                        {
                            if (state.Id == Model.State)
                            {
                                <option value="@state.Id" selected>@state.Initials</option>

                            }
                            else
                            {
                                <option value="@state.Id">@state.Initials</option>
                            }
                        }
                </select>
            </div>


            <div class="float-right font-size13">
                <label>Cidade: </label>
                <select id="dropCities" class="form-control" style="width:200px" name="CityID">
                    <option value="-1">Selecione uma cidade</option>
                    @if (Model.CityID> 0)
                        {
                            <option value="@Model.CityID" selected>@Model.CityName</option>

                        }
                </select>
            </div>
        </div>

        <div class="float-left row margin-top-10 font-size13">
            <label>CEP: </label>
            <input class="form-control" style="width: 100px;" required name="CEP" />
        </div>

        <div class="float-left row margin-top-10 font-size13">
            <label>Endereço: </label>
            <input class="form-control" style="width: 150px;" required name="Street" />
        </div>

        <div class="float-left margin-top-10 font-size13">
            <div class="float-left margin-right-10 font-size13">
                <label>Número: </label>
                <input class="form-control " style="width: 140px;" required name="Number" />
            </div>

            <div class="float-right font-size13">
                <label>Complemento:</label>
                <input class="form-control" style="width: 250px;" name="Complement" />
            </div>
        </div>

        <div class="float-left row margin-top-10 font-size13">
            <label>Email: </label>
            <input type="text" class="form-control" required asp-for="Email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="float-left row margin-top-10 font-size13">
            <label>Senha: </label>
            <input type="password" class="form-control" required asp-for="Password" />
        </div>

        <div class="float-left row margin-top-10 font-size13 ">
            <button type="submit" style="height: 40px !important;" class="btn btn-primary margin-bottom-20 row">Registrar</button>
        </div>
    </form>
</body>

@section Scripts{
    <script type="text/javascript">
      $(document).ready(function () {
            $('#dropStates').states($('#dropCities'));
        });
    </script>
}