@model WhatStore.Domain.Infrastructure.ViewModels.Account.ConfirmUserStoreViewModel

@{
    Layout = "_RegisterUserStore";
}

<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

</head>

<body>
    <form class="formLogin formRegisterUser margin-top-10" method="post">
        <div class="row margin-top-10">
            <label>Name: </label>
            <input type="text" class="form-control" name="Name" required readonly="readonly" value="@Model.Name"/>
        </div>
        <div>
            <label>Email: </label>
            <input type="text" class="form-control" name="Email" required readonly="readonly" value="@Model.Email"/>
        </div>

        <div>
            <label>Password: </label>
            <input type="text" class="form-control" name="Password" required value="@Model.Password"/>
        </div>

        <div class="row margin-top-10">
            <button type="submit" class="btn btn-primary" style="width: 100%; height: 40px;">Entrar</button>
        </div>

    </form>

</body>
</html>