@model WhatStore.Domain.Infrastructure.ViewModels.Account.RegisterUserStoreViewModel

@{
    Layout ="_RegisterUserStore";
}

<html>

<head>
    @*<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />*@

    <title>Store - WhatStore</title>
</head>

<body>
    <div class="float-center" style="width:800px; height:100px; margin-top:-150px">
        <div class="margin-left-75">
            <form class="formLogin formRegisterUser float-left " asp-controller="account" asp-action="~/{store}/login" method="post">
                <div>
                    <h3>Não tenho cadastro:</h3>
                    <label>E-mail:</label>
                    <input type="text" class="form-control" asp-for="Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="row margin-top-10">
                    <button type="submit" class="btn btn-primary" style="width: 100%; height: 40px;">Cadastrar</button>
                </div>
            </form>
        </div>
        <div >
            <form class="formLogin formRegisterUser float-left margin-left-75" asp-controller="accout"  method ="post">
                <div>
                    <h3> Já tenho cadastro </h3>
                    <label>E-mail:</label>

                    <input type="text" class="form-control" asp-for="Email" required />
                    <label>Senha</label>
                    <input type="password" class="form-control" asp-for="Password" required />

                    <div class="row margin-top-10">
                        <button type="submit" class="btn btn-primary" style="width: 100%; height: 40px;">Entrar</button>
                    </div>

                </div>
            </form>
        </div>
    </div>
</body>

</html>