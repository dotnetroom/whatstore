@model WhatStore.Domain.Infrastructure.ViewModels.Account.RegisterUserStoreViewModel

@{
    Layout =null;
}

<html>

<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <title>Store - WhatStore</title>
</head>

<body>

    <div class="store-navbar">
        <a style="font-size:12pt" asp-controller="home" asp-for="" class="links margin-right-30 margin-top-30 float-right">< Voltar para a loja</a>
        <img class="float-left content-logo" src="@ViewBag.Logo" />
    </div>

    <div class="float-center" style="width:100%; height:200px; margin-top:-150px">
        <div class="margin-left-75">
            <form class="formLogin formRegisterUser float-left margin-left-10" asp-controller="account"  method="post">
                <div>
                    <h3>Não tenho cadastro:</h3>
                    <label>E-mail:</label>
                    <input type="text" class="form-control" asp-for="Email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="row margin-top-10">
                    <button type="submit" class="btn btn-primary" style="width: 100%; height: 40px;">Cadastrar</button>
                </div>
            </form>
        </div>
        <div >
            <form class="formLogin formRegisterUser float-left margin-left-50" asp-controller="account" asp-action="~/{store}/login" method ="post">
                <div>
                    <h3> Já tenho cadastro </h3>
                    <label>E-mail:</label>

                    <input type="text" class="form-control" asp-for="Email" required />
                    <label>Senha</label>
                    <input type="password" class="form-control" asp-for="Password" required />

                    <div class="row margin-top-10">
                        <button type="submit" class="btn btn-primary" style="width: 100%; height: 40px;">Entrar</button>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <div class="checkbox">
                                <label asp-for="RememberMe">
                                    <input asp-for="RememberMe" />
                                    @Html.DisplayNameFor(m => m.RememberMe)
                                </label>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>

</html>