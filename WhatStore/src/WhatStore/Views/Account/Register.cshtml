@{
    Layout = null;
}
<html>
<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <title>Cadastro - WhatStore</title>
</head>

<body>
    <div class="logo-register margin-top-75 float-center"></div>

    
    <form id="formRegister" class="float-center margin-top-20">

        <div class="row margin-top-10 font-size13">
            <label>Nome: </label>
            <input type="text" class="form-control" />
        </div>
        <div class="row margin-top-10 font-size13">
            <label>Sobrenome: </label>
            <input type="text" class="form-control" />
        </div>
        <div class="row margin-top-10 font-size13">
            <label>RG: </label>
            <input type="text" class="form-control" />
        </div>
        <div class="row margin-top-10 font-size13">
            <label>CPF: </label>
            <input type="text" class="form-control" />
        </div>
        <div class="row margin-top-10 font-size13">
            <label>Data de nascimento: </label>
            <input type="datetime" name="date" class="form-control" />
        </div>
        <div class="row margin-top-10 font-size13">
            <label>Genero: </label>
            <input type="radio" name="genero" value="feminino" />Feminino
            <input type="radio" name="genero" value="masculino" />Masculino
        </div>
        <div class="row margin-top-10 font-size13">
            <label>Email: </label>
            <input type="text" class="form-control" />
        </div>
        <div class="row margin-top-10 font-size13">
            <label>Senha: </label>
            <input type="password" class="form-control" />
        </div>
        <div class="row margin-top-10 font-size13 ">
            <button type="submit" class="btn btn-primary margin-bottom-20 row">Registrar</button>
        </div>
    </form>
</body>
</html>