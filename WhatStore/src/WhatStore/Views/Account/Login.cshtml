@model WhatStore.Infrastructure.ViewModels.Admin.LoginViewModel

@{
    Layout = null;
    ViewData["Title"] = "Log in";
}

<html>

<head>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    @* FONTE DO GOOGLE *@
    <link href="https://fonts.googleapis.com/css?family=Roboto+Slab" rel="stylesheet">

    <title>Login - WhatStore</title>
</head>

<body>
    <a asp-controller="home" asp-action="index"><div class="logo-login margin-top-75 float-center"></div></a>

    <form class="formLogin float-center margin-top-20" asp-controller="account" asp-action="login" method="post">


        <div class="row margin-top-10">
            <label> Digite seu email:</label>
            <input type="text" class="form-control" required name="Email"/>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="row margin-top-10">
            <label>Digite sua senha:</label>
            <input type="password" class="form-control" required name="Password"/> 
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="row margin-top-10">
            <button type="submit" class="btn btn-primary" style="width: 100%; height: 40px;">Entrar</button>
        </div>

        <hr />

        <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <div class="checkbox">
                            <label asp-for="RememberMe">
                                <input asp-for="RememberMe" />
                                @Html.DisplayNameFor(m => m.RememberMe)
                            </label>
                        </div>
                    </div>
                </div>

        <div>            
            <p>Ainda não fez seu cadastro? <a class="links hover-from-center" asp-controller="account" asp-action="register">Cadastre-se.</a></p>
        </div>
    </form>
</body>

</html>